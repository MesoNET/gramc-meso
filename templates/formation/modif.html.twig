{% extends 'default/base.html.twig' %}

{% block body %}
<section>

<h2>Formation</h2>
    {% import "default/macros.html.twig" as gramcmacros %}

    {{ form_start(form) }}
    <table>
        <tr>
            <th>{{ form_label(form.numeroform) }}</th>
            <td>{{ form_widget(form.numeroform) }}</td>
        </tr>
        <tr>
            <th>{{ form_label(form.acroform) }}</th>
            <td>{{ form_widget(form.acroform) }}</td>
        </tr>
        <tr>
            <th>{{ form_label(form.nomform) }}</th>
            <td>{{ form_widget(form.nomform) }}</td>
        </tr>
        <tr>
            <th>{{ form_label(form.startdate) }}</th>
            <td>{{ form_widget(form.startdate) }}</td>
        </tr>
        <tr>
            <th>{{ form_label(form.enddate) }}</th>
            <td>{{ form_widget(form.enddate) }}</td>
        </tr>
        <tr>
            <th></th>
            <td class="inputrond submitdyn">{{ form_widget(form.submit) }}{{ form_widget(form.reset) }}</td>
        </tr>    
    </table>
    {{ form_end(form) }}

    {{ gramcmacros.menu(menu) }}

</section>

{% endblock body %}
