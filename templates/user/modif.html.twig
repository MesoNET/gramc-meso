{% extends 'default/base.html.twig' %}

{% block body %}
    <h1>Clé ssh associée à l'utilisateur {{ serviceUsers.getloginname(user) }}</h1>

    {% if clessh|length > 0 %}
        <div id="choix_cle_ssh" class="inputrond submitdyn" >
            {% form_theme edit_form 'foundation_5_layout.html.twig' %}
            {{ form_start(edit_form) }}
                {{ form_widget(edit_form) }}
            {{ form_end(edit_form) }}
        </div>

    {% else %}
        <div class="information attention">
            <p class="centrage"><em>Vous n'avez pas encore téléversé de clé ssh !</em></p>
            <p class="centrage"><a href="{{ path('gerer_clessh') }}"><strong>Téléverser mes clés ssh</strong></a></p>
        </div>
    {% endif %}
{% endblock %}
