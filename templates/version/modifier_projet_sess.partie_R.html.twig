{% for form in ressource_form.children.ressource.children %}
<div id="tab_{{form.vars.data.ressource.nom}}" class="onglet">

    <h2>{{form.vars.data.ressource.nom}}</h2>

    <div class="information ok">
        <p>{{ form.vars.data.ressource.desc|raw|nl2br }}</p>
        {% if form.vars.data.ressource.docurl != null %}<p><strong>Documentation technique</strong>: <a href="{{form.vars.data.ressource.docurl}}">{{form.vars.data.ressource.docurl}}</a></p>{% endif %}
        
    </div>

    <div class="inputs">
        <div class="input">
        <strong>{{ form.vars.data.ressource.unite }}:</strong>
        {{ form_widget( form.demande) }}
        </div>
    </div>

</div>
{% endfor %}
